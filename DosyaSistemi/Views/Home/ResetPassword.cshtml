@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LogIn.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section class="body-sign">
        <div class="center-sign">
            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Parola Değiştir</h2>
                </div>
                <div class="panel-body">
                    <div class="alert alert-info">
                        <p class="m-none text-weight-semibold h6">Şifrenizi aşağıdaki boşluğa yazınız!</p>
                    </div>
                    <form>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input name="sifre1" type="password" class="form-control" id="inputPassword" placeholder="Şifrenizi Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-sm-10">
                                <input name="sifre2" type="password" class="form-control" id="inputPassword" placeholder="Tekrar Giriniz">
                            </div>
                        </div>
                        <br />
                        <span class="input-group-btn">
                            <button class="btn btn-primary btn-lg" type="submit">Değiştir</button>
                        </span>
                        @if (TempData["sifreDegistirmeBasarili"] != null)
                        {
                            <div>
                                <div class="alert alert-success" role="alert">
                                    @TempData["sifreDegistirmeBasarili"].ToString()
                                </div>
                            </div>
                        }
                        @if (TempData["kontrolsifre"] != null)
                        {
                            <div>
                                <div class="alert alert-danger" role="alert">
                                    @TempData["kontrolsifre"].ToString()
                                </div>
                            </div>
                        }
                        @if (TempData["sifreayni"] != null)
                        {
                            <div>
                                <div class="alert alert-danger" role="alert">
                                    @TempData["sifreayni"].ToString()
                                </div>
                            </div>
                        }

                        <p class="text-center mt-lg">Hatırladınız mı? <a href="/Home/Index">Giriş Yap!</a></p>
                    </form>
                </div>
            </div>
            <p class="text-center text-muted mt-md mb-md">&copy; @DateTime.Now.Year</p>
        </div>
    </section>

}